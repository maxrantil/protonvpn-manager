[Unit]
Description=ProtonVPN Config Updater Timer
Documentation=https://github.com/maxrantil/protonvpn-manager
Requires=protonvpn-updater.service

[Timer]
# Run every hour by default
OnCalendar=hourly
# Run 5 minutes after boot
OnBootSec=5min
# Add randomization to avoid thundering herd
RandomizedDelaySec=300
# Persistent across reboots
Persistent=true

[Install]
WantedBy=timers.target
